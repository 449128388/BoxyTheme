// Tabs Options
// ===========================================================================

// Tabset Options
// ---------------------------------------------------------------------------

//
// Top Margin
//

// Small

{
  "class": "tabset_control",
  "settings": ["theme_tab_margin_top_sm"],
  "content_margin": [0, 4, 0, 0]
},

// Medium

{
  "class": "tabset_control",
  "settings": ["theme_tab_margin_top_md"],
  "content_margin": [0, 6, 0, 0]
},

// Large

{
  "class": "tabset_control",
  "settings": ["theme_tab_margin_top_lg"],
  "content_margin": [0, 8, 0, 0]
},

// Extra Large

{
  "class": "tabset_control",
  "settings": ["theme_tab_margin_top_xl"],
  "content_margin": [0, 10, 0, 0]
},

//
// Sizes
//

// Auto Width

{
  "class": "tabset_control",
  "settings": ["theme_tab_width_auto"],
  "tab_width": 0,
  "tab_min_width": 64
},

// Small

{
  "class": "tabset_control",
  "settings": ["theme_boxy_global_ui_small"],
  "tab_height": 34
},

{
  "class": "tab_control",
  "settings": ["theme_boxy_global_ui_small"],
  "content_margin": [14, 4, 10, 4]
},

{
  "class": "tabset_control",
  "settings": ["theme_boxy_tab_small"],
  "tab_height": 34
},

{
  "class": "tab_control",
  "settings": ["theme_boxy_tab_small"],
  "content_margin": [14, 4, 10, 4]
},

// Large

{
  "class": "tabset_control",
  "settings": ["theme_boxy_global_ui_large"],
  "tab_height": 54
},

{
  "class": "tabset_control",
  "settings": ["theme_boxy_tab_large"],
  "tab_height": 54
},

//
// Scrolling
//

// Enable Tab Switch via Mouse Wheel

{
  "class": "tabset_control",
  "settings": ["theme_tab_mouse_wheel_switch"],
  "mouse_wheel_switch": true
},

// Tab Options
// ---------------------------------------------------------------------------

//
// Bold Labels
//

{
  "class": "tab_label",
  "settings": ["theme_boxy_tab_label_bold"],
  "font.bold": true
},

{
  "class": "tab_label",
  "parents": [{"class": "tab_control", "attributes": ["selected"]}],
  "settings": ["theme_boxy_tab_selected_label_bold"],
  "font.bold": true
},

