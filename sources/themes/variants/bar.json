},

{
  "class": "sidebar_container",
  "settings": ["theme_bar", "theme_size_xs", "theme_sidebar_border"],
  "content_margin": [0, 28, 1, 0]
},

{
  "class": "sidebar_container",
  "settings": ["theme_bar", "theme_tab_size_xs", "theme_sidebar_border"],
  "content_margin": [0, 28, 1, 0]
},

