// Bar <%= ui.variant.name %> Styles
// ===========================================================================

// Tabset
// ---------------------------------------------------------------------------

{
  "class": "tabset_control",
  "settings": ["theme_bar"],
  "layer0.tint": [<%= ui.background.secondary.rgb %>]
},

// Tab
// ---------------------------------------------------------------------------

{
  "class": "tab_control",
  "settings": ["theme_bar"],
  "layer0.texture": "Boxy Theme/assets/specific/<%= ui.id %>/tabs/tab_overlay.png"
},

// Sidebar
// ---------------------------------------------------------------------------

{
  "class": "sidebar_container",
  "settings": ["theme_bar"],
  "layer1.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/bar/logo.png",
  "layer1.opacity": 0.55,
  "layer2.opacity": <% if (ui.variant.id == "light") { %>0.25<% } else { %>0.5<% } %>
},

{
  "class": "sidebar_container",
  "settings": ["theme_bar", "theme_sidebar_border"],
  "content_margin": [0, 32, 1, 0]
},

{
  "class": "sidebar_container",
  "settings": ["theme_bar", "theme_bar_shadow_hidden"],
  "layer2.opacity": 0
},

//
// Extra Small
//

{
  "class": "sidebar_container",
  "settings": ["theme_bar", "theme_size_xs"],
  "content_margin": [0, 28, 0, 0],
  "layer1.inner_margin": [120, 28, 0, 0],
  "layer1.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/bar/logo_xs.png"
},

{
  "class": "sidebar_container",
  "settings": ["theme_bar", "theme_tab_size_xs"],
