//
// Sidebar Button Close
//

{
  "class": "close_button",
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/buttons/button_close.png",
  "layer1.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/buttons/button_dirty.png"
},

{
  "class": "close_button",
  "settings": ["theme_hidpi_2x"],
