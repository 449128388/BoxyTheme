// Sidebar <%= ui.variant.name %> Styles
// ===========================================================================

// Sidebar Icons
// ---------------------------------------------------------------------------

//
// Sidebar Button Close
//

{
  "class": "close_button",
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/buttons/button_close.png",
  "layer1.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/buttons/button_dirty.png"
},

//
// Sidebar Folders
//

// Disclosure Icons

{
  "class": "disclosure_button_control",
  "settings": ["theme_sidebar_disclosure"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/sidebar/disclosure.png"
},

{
  "class": "disclosure_button_control",
  "settings": ["theme_sidebar_disclosure"],
  "parents": [{"class": "tree_row", "attributes": ["expanded"] }],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/sidebar/disclosure_expanded.png"
},

// Defaults

{
  "class": "icon_folder",
  "settings": ["theme_sidebar_folder_mono"],
  "layer0.opacity": 0.3,
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/sidebar/folder.png"
},

{
  "class": "icon_folder",
  "settings": ["theme_sidebar_folder_mono", "theme_icons_material"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/sidebar/folder_material.png"
},

{
  "class": "icon_folder",
  "settings": ["theme_sidebar_folder_mono"],
  "parents": [{"class": "tree_row", "attributes": ["hover"]}],
  "layer0.opacity": 0.4
},

// Opened

{
  "class": "icon_folder",
  "parents": [{"class": "tree_row", "attributes": ["expanded"]}],
