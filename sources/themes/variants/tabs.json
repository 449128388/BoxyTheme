// Tabs <%= ui.variant.name %> Styles
// ===========================================================================

// Tabset
// ---------------------------------------------------------------------------

//
// Tabset Scrolling
//

{
  "class": "scroll_tabs_left_button",
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/buttons/button_arrow_left.png"
},

{
  "class": "scroll_tabs_right_button",
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/buttons/button_arrow_right.png"
},

//
// Tabset Overflow
//

{
  "class": "show_tabs_dropdown_button",
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/buttons/button_dropdown.png"
},

// Tab
// ---------------------------------------------------------------------------

{
  "class": "tab_control",
  "settings": ["theme_tab_separator_visible"],
  "layer3.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/tabs/tab_separator.png",
  "layer3.opacity": 0.05
},

{
  "class": "tab_control",
  "settings": ["theme_tab_rounded", "theme_tab_separator_visible"],
  "layer3.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/tabs/tab_separator_universal.png"
},

{
  "class": "tab_control",
  "settings": ["theme_app_bar", "theme_tab_separator_visible"],
  "layer3.texture": "Boxy Theme/assets/variants/dark/tabs/tab_separator_universal.png",
  "layer3.opacity": 0.25
},

{
  "class": "tab_control",
  "settings": ["theme_tab_separator_visible"],
  "attributes": ["hover"],
  "layer3.opacity": 0
},

{
  "class": "tab_control",
  "settings": ["theme_tab_separator_visible"],
  "attributes": ["selected"],
  "layer3.opacity": 0
},

//
// Tab Buttons
//

{
  "class": "tab_close_button",
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/buttons/button_close.png"
},
<% if (ui.variant.id == "dark") { %>
{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["selected"]}],
  "layer0.texture": "Boxy Theme/assets/variants/light/buttons/button_close.png"
},
<% } %>
{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["selected", "file_medium"]}],
  "layer0.texture": "Boxy Theme/assets/variants/dark/buttons/button_close.png"
},

{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["selected", "file_medium_dark"]}],
  "layer0.texture": "Boxy Theme/assets/variants/dark/buttons/button_close.png"
},

{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["selected", "file_dark"]}],
  "layer0.texture": "Boxy Theme/assets/variants/dark/buttons/button_close.png"
},

{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["dirty"]}],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/buttons/button_dirty.png"
},

{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["dirty"]}],
  "attributes": ["hover"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/buttons/button_close.png"
},

{
  "class": "tab_close_button",
  "parents": [{"class": "tab_control", "attributes": ["selected"]}],
  "settings": ["theme_tab_selected_transparent"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/buttons/button_close.png"
},

